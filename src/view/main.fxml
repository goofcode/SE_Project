<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="view.Controller" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane gridLinesVisible="true" prefHeight="500.0" prefWidth="640.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <BorderPane>
               <center>
                  <ListView fx:id="left_pannel" editable="false"/>
               </center>
               <top>
                  <FlowPane hgap="8.0" prefHeight="16.0" prefWidth="350.0">
                     <children>
                        <Button fx:id="l_load_btn" minWidth="70.0" mnemonicParsing="false"   onAction="#l_load_file" text="Load" />
                        <Button fx:id="l_edit_btn" minWidth="70.0" mnemonicParsing="false" disable="true" onAction="#l_edit_file" text="Edit" />
                        <Button fx:id="l_save_btn" minWidth="70.0" mnemonicParsing="false" disable="true" onAction="#l_save_file" text="Save" />
                        <Button fx:id="l_copy_btn" minWidth="70.0" mnemonicParsing="false" disable="true" onAction="#l_copy_file" text="Copy" />
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="7.0" left="10.0" top="7.0" />
                     </BorderPane.margin>
                  </FlowPane>
               </top>
            </BorderPane>
            <BorderPane GridPane.columnIndex="1">
               <center>
                  <ListView fx:id="right_pannel" editable="false"/>
               </center>
               <top>
                  <FlowPane hgap="8.0" prefHeight="16.0" prefWidth="350.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="r_load_btn" minWidth="70.0" mnemonicParsing="false" onAction="#r_load_file" text="Load" />
                        <Button fx:id="r_edit_btn" minWidth="70.0" mnemonicParsing="false" disable="true" onAction="#r_edit_file" text="Edit" />
                        <Button fx:id="r_save_btn" minWidth="70.0" mnemonicParsing="false" disable="true" onAction="#r_save_file" text="Save" />
                        <Button fx:id="r_save_btn" minWidth="70.0" mnemonicParsing="false" disable="true" onAction="#r_copy_file" text="Copy" />
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="7.0" left="10.0" top="7.0" />
                     </BorderPane.margin>
                  </FlowPane>
               </top>
            </BorderPane>
         </children>
      </GridPane>
   </center>
   <top>
      <Button fx:id="comp_btn" mnemonicParsing="false" text="Compare" disable="true" BorderPane.alignment="TOP_LEFT" onAction="#compare_file">
         <BorderPane.margin>
            <Insets bottom="7.0" left="10.0" top="7.0" />
         </BorderPane.margin>
      </Button>
   </top>
</BorderPane>
